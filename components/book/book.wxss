/* components/book/book.wxss */
.book-container{
    display: flex;
    flex-direction: column;
    position: relative;
    box-shadow: 1rpx 1rpx 5rpx #e3e3e3;
    width: 240rpx;
    height: 360rpx;
    margin-top: 20rpx;
    margin-bottom: 10rpx;    
}
.book-container image{
    width: 100%;
    height: 100%;
    border-radius: 2rpx;
}
.description{
    width: 100%;
    position: absolute;
    bottom: 0rpx;
    background: #fff;
    padding: 5rpx 10rpx 8rpx 15rpx;
    font-size: 24rpx;
    border-bottom-left-radius: 2rpx;
    border-bottom-right-radius: 2rpx;
    box-sizing: border-box;
}
.description .title{
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: inline-block;
    width: 100%;
}
.description .author{
    font-size: 20rpx;
    color: #999;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: inline-block;
    width: 100%;
}
.description .foot{
    font-size: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    color: #999
}
