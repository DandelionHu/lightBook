<!--components/music/music.wxml-->
<view class="music-container">
    <image class="classic-img {{playing?'active':''}}" src="{{img}}" />
    <image class="palyer-img" bind:tap="onPlay" src="{{playing?pauseSrc:playSrc}}" />
    <image class="tag" src="../images/music@tag.png" />
    <text class="content">{{content}}</text>
</view>
