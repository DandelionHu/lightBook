/* pages/book/book.wxss */
page{
    width: 100%;
    height: 100%;
}
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}
.sub-container{
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f5f5f5;
    margin-top: 100rpx;
}
.books-container{
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 0 90rpx 0 90rpx;
    justify-content: space-between;
}
.books-container .books{
    margin-bottom: 30rpx;
}
.header{
    position: fixed;
    background: #fff;
    height: 100rpx;
    width: 100%;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 3rpx #e3e3e3;
    z-index: 99
}
.header .box{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 50rpx;
    background: #f5f5f5;
    height: 68rpx;
    width: 710rpx;
    color: #999;
}
.head-img{
    width: 106rpx;
    height: 34rpx;
    margin-top: 40rpx;
}
.box image{
    margin-right: 10rpx;
    width: 28rpx;
    height: 28rpx;
}
v-search{
    width: 100%;
    height: 100%;
}